{
  "name": "@melonproject/melonjs",
  "version": "0.0.66",
  "description": "A convenient JavaScript interface to the Melon protocol Ethereum smart contracts.",
  "main": "index.js",
  "module": "bundle.esm.js",
  "typings": "index.d.ts",
  "license": "MIT",
  "author": "Avantgarde Finance <team@avantgarde.finance>",
  "homepage": "https://melonprotocol.com",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/melonproject/melonjs.git"
  },
  "bugs": {
    "url": "https://github.com/melonproject/melonjs/issues"
  },
  "contributors": [
    "Sebastian Siemssen <fubhy@fubhy.com>",
    "Ivan Herger <ivan@herger.org>",
    "Luong Nguyen <luongnt.58@gmail.com>"
  ],
  "scripts": {
    "clean": "rimraf dist docs coverage",
    "prebuild": "rimraf build",
    "build": "tsc && rollup --config",
    "postbuild": "cp package.json LICENSE README.md dist",
    "dev": "jest --watch",
    "prewatch": "cp package.json dist",
    "watch": "tsc --watch",
    "precodegen": "rimraf src/abis",
    "codegen": "node scripts/codegen",
    "predocs": "rimraf docs",
    "docs": "typedoc",
    "postdocs": "cp jekyll.config.yml docs/_config.yml",
    "pretest": "rimraf coverage",
    "test": "jest --verbose --config tests/jest.config.js",
    "coverage": "yarn test --coverage",
    "format": "prettier --write src/{*,**/*}.ts",
    "lint:prettier": "yarn prettier --list-different src/{*,**/*}.ts",
    "lint:tslint": "tsc --noEmit && tslint src/{*,**/*}.ts",
    "lint": "yarn lint:tslint && yarn lint:prettier",
    "typecheck": "tsc --noEmit",
    "preversion": "yarn codegen && yarn typecheck && yarn test && yarn lint && yarn docs && yarn build",
    "postversion": "cp package.json dist",
    "prerelease": "yarn version",
    "release": "git push --tags && yarn publish dist --new-version $npm_package_version",
    "postrelease": "git push && gh-pages -d docs"
  },
  "dependencies": {
    "@0x/order-utils": "^8.4.0",
    "@0x/subproviders": "^5.0.4",
    "bignumber.js": "^9.0.0",
    "web3": "^2.0.0-alpha.1",
    "web3-core": "^2.0.0-alpha.1",
    "web3-eth": "^2.0.0-alpha.1",
    "web3-eth-abi": "^2.0.0-alpha.1",
    "web3-eth-contract": "^2.0.0-alpha.1",
    "web3-providers": "^2.0.0-alpha.1",
    "web3-utils": "^2.0.0-alpha.1"
  },
  "devDependencies": {
    "@0x/types": "^2.4.3",
    "@types/jest": "^24.0.19",
    "@types/lru-cache": "^5.1.0",
    "@types/ramda": "^0.26.33",
    "cp": "^0.2.0",
    "ganache-core": "^2.8.0",
    "gh-pages": "^2.1.1",
    "glob": "^7.1.5",
    "husky": "^3.0.8",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.1",
    "lru-cache": "^5.1.1",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "rollup": "^1.25.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "tar": "^5.0.5",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typedoc": "^0.15.0",
    "typescript": "^3.7.4"
  },
  "resolutions": {
    "bignumber.js": "^9.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn format",
      "git add"
    ]
  }
}
