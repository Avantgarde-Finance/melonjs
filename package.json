{
  "name": "@melonproject/melonjs",
  "version": "2.0.0-next.3",
  "description": "A convenient JavaScript interface to the Melon protocol Ethereum smart contracts.",
  "main": "index.js",
  "module": "bundle.esm.js",
  "typings": "index.d.ts",
  "license": "MIT",
  "author": "Avantgarde Finance <team@avantgarde.finance>",
  "homepage": "https://melonprotocol.com",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/melonproject/melonjs.git"
  },
  "bugs": {
    "url": "https://github.com/melonproject/melonjs/issues"
  },
  "scripts": {
    "clean": "rimraf dist typedocs coverage",
    "prebuild": "rimraf dist",
    "build": "tsc && rollup --config",
    "postbuild": "cp package.json LICENSE README.md dist",
    "prewatch": "cp package.json dist",
    "watch": "tsc --watch",
    "codegen": "ts-node --transpile-only scripts/codegen",
    "pretypedocs": "rimraf typedocs",
    "typedocs": "typedoc",
    "posttypedocs": "cp jekyll.config.yml typedocs/_config.yml",
    "test": "jest --verbose --config tests/jest.config.js",
    "precoverage": "rimraf coverage",
    "coverage": "yarn test --coverage",
    "format": "prettier --write {src,scripts}/{*,**/*}.ts",
    "lint": "yarn prettier --list-different {src,scripts}/{*,**/*}.ts",
    "typecheck": "tsc --noEmit",
    "preversion": "yarn typecheck && yarn test && yarn lint && yarn typedocs && yarn build",
    "postversion": "cp package.json dist",
    "prerelease": "yarn version",
    "release": "git push --tags && yarn publish dist --new-version $npm_package_version",
    "postrelease": "git push && gh-pages -d typedocs"
  },
  "dependencies": {
    "bignumber.js": "^9.0.0",
    "ethers": "^5.0.0-beta.180"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/jest": "^25.2.1",
    "@types/rimraf": "^3.0.0",
    "cp": "^0.2.0",
    "gh-pages": "^2.1.1",
    "glob": "^7.1.5",
    "husky": "^4.2.3",
    "jest": "^25.2.7",
    "lint-staged": "^10.1.2",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "rollup": "^2.3.3",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.5.0",
    "ts-jest": "^25.3.1",
    "ts-node": "^8.8.2",
    "typedoc": "^0.17.4",
    "typedoc-plugin-solidity": "^1.0.0",
    "typescript": "^3.8.3",
    "yargs": "^15.3.1"
  },
  "codegen": {
    "input": "../melon-protocol/out/{Registry,KyberPriceFeed,TestingPriceFeed,Vault,Shares,PolicyManager,Hub,Accounting,ManagementFee,PerformanceFee,Accounting,FundFactory,OrderTaker,Engine,StandardToken,AssetBlacklist,AssetWhitelist,MaxConcentration,MaxPositions,PriceTolerance,UserWhitelist}.json"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn format"
    ]
  }
}
