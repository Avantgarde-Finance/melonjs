{
  "name": "@melonproject/melonjs",
  "version": "0.0.3",
  "description": "Technology Regulated and Operated Investment Funds.",
  "main": "index.js",
  "typings": "index.d.ts",
  "license": "GPL-3.0",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "yarn clean",
    "build": "tsc --project .",
    "postbuild": "copy package.json dist",
    "dev": "ts-node --transpile-only src",
    "prewatch": "copy package.json dist",
    "watch": "tsc --watch --project .",
    "test": "echo \"No tests specified.\" && exit 0",
    "format": "prettier --write src/{*,**/*}.ts",
    "lint:prettier": "yarn prettier --list-different src/{*,**/*}.ts",
    "lint:tslint": "tsc --noEmit && tslint src/{*,**/*}.ts",
    "lint": "yarn lint:tslint && yarn lint:prettier",
    "typecheck": "tsc --project . --noEmit",
    "prerelease": "yarn build",
    "release": "yarn version && copy package.json dist && yarn publish dist --non-interactive"
  },
  "dependencies": {
    "bignumber.js": "^9.0.0",
    "eth-provider": "^0.2.5",
    "web3": "^2.0.0-alpha.1",
    "web3-core": "^2.0.0-alpha.1",
    "web3-eth": "^2.0.0-alpha.1",
    "web3-eth-contract": "^2.0.0-alpha.1",
    "web3-utils": "^2.0.0-alpha.1"
  },
  "devDependencies": {
    "@types/md5": "^2.1.33",
    "copy": "^0.3.2",
    "glob": "^7.1.4",
    "husky": "^3.0.8",
    "lint-staged": "^9.4.1",
    "np": "^5.1.0",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "ts-node": "^8.4.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.6.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn lint"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn format && yarn typecheck",
      "git add"
    ]
  },
  "np": {
    "yarn": true,
    "releaseDraft": false,
    "contents": "dist"
  }
}
