{
  "name": "@melonproject/melonjs",
  "version": "2.0.1",
  "description": "A convenient JavaScript interface to the Melon protocol Ethereum smart contracts.",
  "main": "index.js",
  "module": "bundle.esm.js",
  "typings": "index.d.ts",
  "license": "MIT",
  "author": "Melon Council DAO <team@meloncouncil.io>",
  "homepage": "https://melonprotocol.com",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/melonproject/melonjs.git"
  },
  "bugs": {
    "url": "https://github.com/melonproject/melonjs/issues"
  },
  "scripts": {
    "clean": "rimraf dist typedocs coverage",
    "prebuild": "rimraf dist",
    "build": "tsc && rollup --config",
    "postbuild": "node scripts/postbuild",
    "prewatch": "yarn build",
    "watch": "tsc --watch",
    "codegen": "ts-node --transpile-only codegen",
    "pretypedocs": "rimraf typedocs",
    "typedocs": "typedoc",
    "posttypedocs": "node scripts/posttypedoc",
    "test": "jest --passWithNoTests",
    "precoverage": "rimraf coverage",
    "coverage": "yarn test --coverage",
    "format": "prettier --write src/{*,**/*}.ts",
    "lint": "yarn prettier --list-different src/{*,**/*}.ts",
    "typecheck": "tsc --noEmit",
    "prerelease": "yarn version && yarn typecheck && yarn test && yarn lint && yarn typedocs && yarn build",
    "release": "git push --tags && yarn publish dist --new-version $npm_package_version",
    "postrelease": "git push && gh-pages -d typedocs"
  },
  "dependencies": {
    "@melonproject/protocol": "^2.0.0-dev.77179589",
    "bignumber.js": "^9.0.0",
    "ethers": "^5.0.8"
  },
  "devDependencies": {
    "@crestproject/crestproject": "^0.0.19",
    "@types/jest": "^26.0.9",
    "fs-extra": "^9.0.1",
    "gh-pages": "^3.1.0",
    "jest": "^26.3.0",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "rollup": "^2.3.3",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.6.2",
    "ts-jest": "^26.2.0",
    "ts-node": "^8.8.2",
    "typedoc": "^0.18.0",
    "typedoc-plugin-solidity": "^1.0.0",
    "typescript": "^4.0.0-beta"
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src"
    ]
  }
}
