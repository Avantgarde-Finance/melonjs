{
  "name": "@melonproject/melonjs",
  "version": "0.0.7",
  "description": "Technology Regulated and Operated Investment Funds.",
  "main": "index.js",
  "typings": "index.d.ts",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "yarn clean",
    "build": "tsc --project .",
    "postbuild": "copy package.json dist",
    "dev": "ts-node --transpile-only src",
    "prewatch": "copy package.json dist",
    "watch": "tsc --watch --project .",
    "exports": "node scripts/exports",
    "docs": "typedoc",
    "test": "jest",
    "format": "prettier --write src/{*,**/*}.ts",
    "lint:prettier": "yarn prettier --list-different src/{*,**/*}.ts",
    "lint:tslint": "tsc --noEmit && tslint src/{*,**/*}.ts",
    "lint": "yarn lint:tslint && yarn lint:prettier",
    "typecheck": "tsc --project . --noEmit",
    "prerelease": "yarn build",
    "release": "yarn version && copy package.json dist && yarn publish dist --non-interactive"
  },
  "dependencies": {
    "bignumber.js": "^9.0.0",
    "ramda": "^0.26.1",
    "web3-core": "^2.0.0-alpha.1",
    "web3-eth": "^2.0.0-alpha.1",
    "web3-eth-contract": "^2.0.0-alpha.1",
    "web3-utils": "^2.0.0-alpha.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.19",
    "@types/lru-cache": "^5.1.0",
    "@types/ramda": "^0.26.33",
    "copy": "^0.3.2",
    "glob": "^7.1.4",
    "husky": "^3.0.8",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.1",
    "lru-cache": "^5.1.1",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typedoc": "^0.15.0",
    "typescript": "^3.6.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn format",
      "git add"
    ]
  }
}
